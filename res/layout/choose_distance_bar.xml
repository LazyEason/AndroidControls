<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/white"
    android:gravity="center_vertical|center_horizontal"
    android:layout_marginTop="@dimen/quarter_vertical_margin"
    android:orientation="vertical" >
       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/medium_horizontal_margin"
        android:layout_marginRight="@dimen/medium_horizontal_margin"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ch_di_ba_fi_dot1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_dot_arrived" />

        <ImageView
            android:id="@+id/ch_di_ba_fi_li1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_line_past" />

        <ImageView
            android:id="@+id/ch_di_ba_fi_dot2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_dot_arrived" />

        <ImageView
            android:id="@+id/ch_di_ba_fi_li2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_line_past" />

        <ImageView
            android:id="@+id/ch_di_ba_fi_dot3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_dot_arrived" />

        <ImageView
            android:id="@+id/ch_di_ba_fi_li3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_line_past" />

        <ImageView
            android:id="@+id/ch_di_ba_fi_dot4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_dot_arrived" />

        <ImageView
            android:id="@+id/ch_di_ba_fi_li4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_line_past" />

        <ImageView
            android:id="@+id/ch_di_ba_fi_dot5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_dot_arrived" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/ch_di_ba_tv1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1km"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/ch_di_ba_tv2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="3km"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/ch_di_ba_tv3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="5km"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/ch_di_ba_tv4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="10km"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/ch_di_ba_tv5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="30km"
            android:textColor="@color/gray" />
    </LinearLayout>
    

</LinearLayout>
