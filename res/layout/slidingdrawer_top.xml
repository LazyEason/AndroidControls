<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@drawable/bg_menu_topbar" >

    <Button
        android:id="@+id/btn_sliding_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/list_selector" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:src="@drawable/ic_info_pannel_good" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/large_horizontal_margin"
        android:layout_marginRight="@dimen/small_horizontal_margin"
        android:orientation="horizontal" >
        
	    <TextView
	        android:id="@+id/txt_sliding_1_stname"
	        android:layout_weight="3"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_marginRight="@dimen/half_horizontal_margin"
	        android:singleLine="true"
	        android:textColor="@color/white"
	        android:textSize="@dimen/textSize_Small" />
	
	    <TextView
	        android:id="@+id/txt_sliding_1_distance"
	        android:layout_weight="4"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_marginRight="@dimen/half_horizontal_margin"
	        android:singleLine="true"
	        android:drawableLeft="@drawable/ic_location"
	        android:textColor="@color/white"
	        android:textSize="@dimen/textSize_Small" />
	    
	    <TextView
	        android:id="@+id/txt_sliding_1_price"
	        android:layout_weight="4"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_marginRight="@dimen/half_horizontal_margin"
	        android:singleLine="true"
	        android:textColor="@color/white"
	        android:textSize="@dimen/textSize_Small" />
	    
	    <TextView
	        android:id="@+id/txt_sliding_1_save"
	        android:layout_weight="4"
	        android:layout_width="0dp"
	        android:layout_height="32dp"
	        android:layout_gravity="center_vertical"
	        android:gravity="center"
	        android:singleLine="true"
	        android:background="@drawable/itembox_white"
	        android:textColor="@color/green_dark"
	        android:textSize="@dimen/textSize_Small" />
	    
    </LinearLayout>
</FrameLayout>